    }
    
    setIsSavingService(true)
    
    try {
      console.log('ðŸ”§ Saving service record...')
      const response = await fetch(`/api/vehicles/${selectedVehicle.id}/service`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',

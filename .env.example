# ========================================
# MOTOMIND - 18-MONTH ENVIRONMENT CONFIG
# ========================================
# Copy this to .env.local for development
#
# Variables organized by deployment phase:
# - Phase 1: Foundation (Required NOW)
# - Phase 2: Intelligence Layer (Month 3)
# - Phase 3: Analytics (Month 6)
# - Phase 4: Enterprise (Month 9)
# - Phase 5: Premium (Month 13)
# - Phase 6: Scale (Month 16)

# ========================================
# PHASE 1: FOUNDATION (REQUIRED NOW)
# ========================================

# App Configuration
NEXT_PUBLIC_APP_NAME=MotoMind
NEXT_PUBLIC_APP_URL=http://localhost:3005
# NEXT_PUBLIC_API_URL=http://localhost:3005  # Optional: Override API base URL (defaults to APP_URL)
NODE_ENV=development
PORT=3005

# Database (Supabase PostgreSQL)
# Format: postgresql://postgres:[PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@db.YOUR_PROJECT_REF.supabase.co:5432/postgres

# Supabase (Required)
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# OpenAI (Required for Vision + Chat)
OPENAI_API_KEY=sk-proj-your-openai-api-key-here
OPENAI_ORG_ID=org-your-org-id-here
OPENAI_MODEL=gpt-4o

# Redis/KV (Optional - for caching)
REDIS_URL=redis://localhost:6379
# OR use Vercel KV:
# KV_URL=https://your-project.kv.vercel-storage.com

# ========================================
# PHASE 2: INTELLIGENCE LAYER (MONTH 3)
# ========================================

# Multi-Model Vision (for 99.9% uptime + cost optimization)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
GOOGLE_AI_API_KEY=your-google-ai-key-here

# Location Services (FREE - No API key needed)
GEOCODING_URL=https://nominatim.openstreetmap.org
OVERPASS_URL=https://overpass-api.de/api/interpreter
WEATHER_URL=https://archive-api.open-meteo.com/v1/archive

# ========================================
# PHASE 3: ANALYTICS (MONTH 6)
# ========================================

# Analytics Platform
NEXT_PUBLIC_ANALYTICS_ENABLED=true
NEXT_PUBLIC_ANALYTICS_PROVIDER=posthog

# PostHog (Recommended - FREE for <1M events/month)
NEXT_PUBLIC_POSTHOG_KEY=phc_your_posthog_key_here
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# ========================================
# PHASE 4: ENTERPRISE (MONTH 9)
# ========================================

# Push Notifications (Firebase Cloud Messaging)
NEXT_PUBLIC_FCM_VAPID_KEY=your_fcm_vapid_key_here
FCM_SERVER_KEY=your_fcm_server_key_here

# Email Notifications (Choose ONE provider)

# Option 1: SendGrid
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=notifications@motomind.app

# Option 2: Resend (Recommended - simpler API)
RESEND_API_KEY=re_your_resend_api_key_here
RESEND_FROM_EMAIL=notifications@motomind.app

EMAIL_PROVIDER=sendgrid  # or 'resend'

# Slack Integration (Enterprise customers)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# QuickBooks Integration (Enterprise exports)
QUICKBOOKS_CLIENT_ID=your_quickbooks_client_id
QUICKBOOKS_CLIENT_SECRET=your_quickbooks_client_secret
QUICKBOOKS_REDIRECT_URI=https://motomind.app/integrations/quickbooks/callback

# Samsara (Optional - Fleet telematics)
SAMSARA_API_KEY=your_samsara_api_key_here

# ========================================
# PHASE 5: PREMIUM (MONTH 13)
# ========================================

# Voice Input/Output (Uses OpenAI - no extra key needed)
# Whisper transcription + TTS are included in OPENAI_API_KEY

# Price Intelligence (GasBuddy API)
GASBUDDY_API_KEY=your_gasbuddy_api_key_here

# ========================================
# PHASE 6: SCALE (MONTH 16)
# ========================================

# Error Tracking (Sentry)
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_TRACES_SAMPLE_RATE=0.1

# Metrics (Prometheus)
ENABLE_METRICS=true
METRICS_PORT=9090

# ========================================
# SYSTEM CONFIGURATION
# ========================================

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes

# Feature Flags (Basic)
ENABLE_ENRICHMENT=false
ENABLE_TELEMETRY=false

# ========================================
# LEGACY / DEPRECATED (Keep for compatibility)
# ========================================

# Mapbox (for map visualization - optional)
NEXT_PUBLIC_MAPBOX_TOKEN=pk.your_mapbox_public_token_here

# Stripe (billing - optional)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Authentication (if using NextAuth)
NEXTAUTH_SECRET=your-nextauth-secret-min-32-chars-here
JWT_SECRET=your-jwt-secret-key-here
